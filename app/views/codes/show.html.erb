<div class="bg-white">
  <code-detail
    :tags="<%= @tags %>"
    local-repo-id="<%= @local_code.id %>"
    :code="<%= @code %>"
    :last-commit="<%= @last_commit || {} %>"
    :branches="<%= @branches %>"
    current-branch="<%= @current_branch || 'main' %>"
    current-path="<%= @current_path || '' %>"
    default-tab="<%= @default_tab || 'summary' %>"
    :blob="<%= @blob || {} %>"
    :action-name="'<%= action_name %>'"
    :settings-visibility="<%= @settings_visibility %>"
    :owner-url="'<%= @owner_url %>'"
    avatar="<%= @avatar_url %>"
    :can-write="<%= !!current_user&.can_write?(@local_code) %>"
    user-name="<%= current_user&.name %>"
    user-token="<%= current_user&.git_token %>"
  ></code-detail>
</div>
